<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Transport Colis ESTF</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Transport Colis ESTF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>

                    <li class="dropdown">
                        @Html.ActionLink("Colis", "Index", "Colis")
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Nouveau", "Create", "Colis")</li>
                        <li>@Html.ActionLink("Teste", "", "")</li>
                    </ul>
                </li>
                <li>
                    @Html.ActionLink("Client", "Index", "Colis")
                    <ul>
                        <li>@Html.ActionLink("Nouveau", "Create", "Colis")</li>
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    </ul>
                </li>
                <li>
                    @Html.ActionLink("Gestion", "Index", "Colis")
                    <ul>
                        <li>
                            @Html.ActionLink("Colis", "", "")
                            <ul>
                                <li>@Html.ActionLink("Type", "Index", "TypeColis")</li>
                                <li>@Html.ActionLink("Nature", "Index", "Nature")</li>
                                <li>@Html.ActionLink("Ville", "Index", "Ville")</li>
                                <li>@Html.ActionLink("Voie", "Index", "Voie")</li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("Employe", "", "")
                            <ul>
                                <li>@Html.ActionLink("Noveau", "Create", "Employe")</li>
                                <li>@Html.ActionLink("Type", "Index", "TypeEmploye")</li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("User Systéme", "index", "User")
                            <ul>
                                <li>@Html.ActionLink("Noveau", "Register", "Account")</li>
                                <li>@Html.ActionLink("Type", "Index", "Nature")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Statistique", "Index", "TypeEmploye")</li>


                    </ul>
                </li>

                <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Transport Colis ESTF By Alfredo Duarte/p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
